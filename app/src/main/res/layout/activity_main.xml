<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="148dp"
        android:layout_height="155dp"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />






    <Button
        android:id="@+id/AddLoc"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginEnd="444dp"
        android:text="AddLocation"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <Button
        android:id="@+id/listbutton"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginEnd="444dp"
        android:text="List"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <Button
        android:id="@+id/gobutton"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginStart="80dp"
        android:text="Go"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <Button
        android:id="@+id/goAllbutton"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginStart="80dp"
        android:text="Go All"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

    <Button
        android:id="@+id/buttonBackupMap"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginEnd="80dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <Button
        android:id="@+id/buttonLoadMapFromPrivateFile"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginEnd="80dp"
        android:text="Load"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869" />

    <Switch
        android:id="@+id/switchDarkMode"
        android:layout_width="122dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Dark Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_go_next"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginStart="444dp"
        android:text="NextPosition"
        app:layout_constraintBottom_toBottomOf="parent"



        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573" />

    <Button
        android:id="@+id/button_retry"
        android:layout_width="185dp"
        android:layout_height="125dp"
        android:layout_marginStart="444dp"
        android:text="Retry"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />

    <Switch
        android:id="@+id/switchDetection"
        android:layout_width="149dp"
        android:layout_height="63dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="4dp"
        android:text="DetectionMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchDarkMode" />
</androidx.constraintlayout.widget.ConstraintLayout>